<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_rg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/radiogroup_bg_color"
        android:gravity="center_vertical">
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <RadioButton
                android:id="@+id/homepage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/homepage"
                android:button="@null"
                android:text="首页"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                />
            <RadioButton
                android:id="@+id/find"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/find"
                android:text="发现"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <RadioButton
                android:id="@+id/myself"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/myself"
                android:text="我"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <RadioButton
                android:id="@+id/welfare"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/welfare"
                android:text="福利"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>